<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".codi.recoCodi.activity_recoCodi_setting">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/black"
        app:scale_base_height="120"
        app:scale_base_width="1080">

        <include

            layout="@layout/header_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.ssomai.android.scalablelayout.ScalableLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="코디 구성"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/블랙"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상의+하의" />

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="한벌옷" />

                    <CheckBox
                        android:id="@+id/checkBox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="외투" />

                    <CheckBox
                        android:id="@+id/checkBox4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가방" />

                    <CheckBox
                        android:id="@+id/checkBox5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신발" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="액세서리" />
                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="색 조합"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/블랙" />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_main_color"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@color/네이비"
                        app:civ_border_width="1dp"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tv_main_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="네이비 ">
                    </TextView>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_sub_color"
                        android:layout_marginLeft="7dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@color/베이지"
                        app:civ_border_width="1dp"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tv_sub_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="베이지">
                    </TextView>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="필수 포함 카테고리"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/블랙" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상의"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="하의"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="한벌옷" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="외투"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가방"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신발"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="액세서리"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="필수 포함 옷"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/블랙" />

                <HorizontalScrollView
                    android:id="@+id/tab_view"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/child_card"
                            android:layout_height="@dimen/child_card"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="@color/closet"
                            card_view:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/child1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hanger_gray_small" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/child_card"
                            android:layout_height="@dimen/child_card"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="@color/closet"
                            card_view:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/child2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hanger_gray_small" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/child_card"
                            android:layout_height="@dimen/child_card"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="@color/closet"
                            card_view:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/child3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hanger_gray_small" />
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/child_card"
                            android:layout_height="@dimen/child_card"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="@color/closet"
                            card_view:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/child4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hanger_gray_small" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/child_card"
                            android:layout_height="@dimen/child_card"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="@color/closet"
                            card_view:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/child5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hanger_gray_small" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/child_card"
                            android:layout_height="@dimen/child_card"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="@color/closet"
                            card_view:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/child6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hanger_gray_small" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/child_card"
                            android:layout_height="@dimen/child_card"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="@color/closet"
                            card_view:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/child7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hanger_gray_small" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/child_card"
                            android:layout_height="@dimen/child_card"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="@color/closet"
                            card_view:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/child8"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hanger_gray_small" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/child_card"
                            android:layout_height="@dimen/child_card"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="@color/closet"
                            card_view:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/child9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hanger_gray_small" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/child_card"
                            android:layout_height="@dimen/child_card"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="@color/closet"
                            card_view:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/child10"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hanger_gray_small" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </HorizontalScrollView>
            </LinearLayout>


            <LinearLayout
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:textColor="@color/블랙"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    >
                </TextView>
                <RadioGroup
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여성" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남성" />
                </RadioGroup>





            </LinearLayout>


            <LinearLayout
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날씨"
                    android:textColor="@color/블랙"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    >
                </TextView>
                <RadioGroup
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rb_now_temper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재 날씨" />
                    <RadioButton
                        android:id="@+id/rb_select_temper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기온 선택" />
                    <RadioButton
                        android:id="@+id/rb_select_season"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="계절 선택" />
                </RadioGroup>





            </LinearLayout>



        </LinearLayout>

    </ScrollView>




</LinearLayout>