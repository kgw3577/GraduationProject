<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.clothes">
	
	<!--반환 레코드를 config에서 지정한 clothesVO 빈에 저장 -->
	<resultMap id="clothesResult" type="clothesVO">
		<result property="no" column="cloNo" />	<!-- bean 속성 / db 칼럼명 (대응) -->
		<result property="name" column="cloName" />
		<result property="category" column="cloCategory" />
		<result property="brand" column="cloBrand" />
		<result property="color" column="cloColor" />
		<result property="season" column="cloSeason" />
		<result property="cloSize" column="cloSize" />
		<result property="img" column="cloImg" />
		<result property="fileName" column="fileName" />
		<result property="filePath" column="filePath" />
		<result property="like" column="cloLike" />
		<result property="userID" column="userID" />
		<result property="closetName" column="closetName" />
		<result property="date" column="cloDate" />
		
	</resultMap>

	<!--반환 레코드를 해쉬맵에 저장 -->
	<resultMap id="clothesResult_h" type="java.util.HashMap">
		<result property="no" column="cloNo" />	<!-- bean 속성 / db 칼럼명 (대응) -->
		<result property="name" column="cloName" />
		<result property="category" column="cloCategory" />
		<result property="brand" column="cloBrand" />
		<result property="color" column="cloColor" />
		<result property="season" column="cloSeason" />
		<result property="cloSize" column="cloSize" />
		<result property="img" column="cloImg" />
		<result property="fileName" column="fileName" />
		<result property="filePath" column="filePath" />
		<result property="like" column="cloLike" />
		<result property="userID" column="userID" />
		<result property="closetName" column="closetName" />
		<result property="date" column="cloDate" />	
		
	</resultMap>
	
	
	<!-- SQL문. 반환 레코드를 clothesResult에 저장 -->

	<!-- 조건값에 따라 select하는 쿼리. clothesVO의 속성에 따라 where 절을 추가함. -->
	<select id="searchClothes" resultMap="clothesResult" parameterType="clothesVO">
	<![CDATA[
		select * from CLOTHES
	]]>
		<where>
			<if test="no != '' and no != null">
				cloNo = #{no}
			</if>
			<if test="name != '' and name != null">
				and cloName = #{name}
			</if>
			<if test="category != '' and category != null">
				and cloCategory = #{category}
			</if>
			<if test="brand != '' and brand != null">
				and cloBrand = #{brand}
			</if>
			<if test="color != '' and color != null">
				and cloColor = #{color}
			</if>
			<if test="date != '' and date != null">
				and cloDate = #{date}
			</if>
			<if test="season != '' and season != null">
				and cloSeason = #{season}
			</if>
			<if test="fileName != '' and fileName != null">
				and fileName = #{fileName}
			</if>
			<if test="filePath != '' and filePath != null">
				and filePath = #{filePath}
			</if>
			<if test="like != '' and like != null">
				and cloLike = #{like}
			</if>
			<if test="closetName != '' and closetName != null">
				and closetName = #{closetName} 
			</if>
			<if test="userID != '' and userID != null">
				and userID = #{userID}
			</if>
		</where>
		<if test="pageStart != -1 and pageSize != -1">
			ORDER BY cloDate DESC LIMIT #{pageStart}, #{pageSize}
		</if>
	</select>
	
	
	<!-- 옷 추가 쿼리  -->
	<insert id="insertClothes" parameterType="java.util.HashMap">
	<![CDATA[
		insert into CLOTHES 
		values(#{no},#{name},#{category},#{brand},#{color},#{season},
		#{cloSize},#{img},#{fileName},#{filePath},#{like},#{userID},
		#{closetName},#{date})
	]]>
	</insert>

	<!-- 옷 정보(즐겨찾기) 수정 쿼리 -->
	<update id="updateFavorite" parameterType="clothesVO">
	<![CDATA[
		update CLOTHES
		set cloLike=#{like}
		where
		cloNo = #{no}
	]]>
	</update>

	<!-- 옷 삭제 쿼리 -->
	<delete id="deleteClothes" parameterType="clothesVO">
	<![CDATA[
		delete from CLOTHES
		where
		cloNo = #{no}
	]]>
	</delete>

</mapper>
