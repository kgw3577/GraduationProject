<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status_bar"
        app:scale_base_width="1080"
        app:scale_base_height="64"
        android:background="#FFFFFF">
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_bar"
        app:scale_base_width="1080"
        app:scale_base_height="116">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/header_nav"
            app:scale_width="200"
            app:scale_height="116">

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:scale_base_width="200"
                app:scale_base_height="116">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/header_nav_iv"
                    app:scale_left_baseposition="center"
                    app:scale_top_baseposition="center"
                    app:scale_left="70"
                    app:scale_top="58"
                    app:scale_width="56"
                    app:scale_height="41"
                    android:src="@drawable/icon_home_nav"/>
            </com.ssomai.android.scalablelayout.ScalableLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/header_ci"
            app:scale_left="200"
            app:scale_top="0"
            app:scale_width="730"
            app:scale_height="116">
            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:scale_base_width="680"
                app:scale_base_height="116">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:scale_left_baseposition="center"
                    app:scale_left="340"
                    app:scale_top="11"
                    app:scale_width="284"
                    app:scale_height="94"
                    android:src="@drawable/sample"/>

            </com.ssomai.android.scalablelayout.ScalableLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/header_weather"
            app:scale_left="830"
            app:scale_top="0"
            app:scale_width="250"
            app:scale_height="116">

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:scale_base_width="250"
                app:scale_base_height="116">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:scale_left_baseposition="center"
                    app:scale_top_baseposition="center"
                    app:scale_left="180"
                    app:scale_top="58"
                    app:scale_width="53"
                    app:scale_height="53"
                    android:src="@drawable/icon_my"/>



            </com.ssomai.android.scalablelayout.ScalableLayout>

        </RelativeLayout>

    </com.ssomai.android.scalablelayout.ScalableLayout>
</RelativeLayout>
